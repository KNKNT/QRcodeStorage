<Page x:Class="QRcodeStorage.Pages.ScanQR"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QRcodeStorage.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1350"
      Title="ScanQR">

    <Border Padding="30,0,30,0" Background="{StaticResource Background}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="582"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Сканирование QR-кодов" Foreground="{StaticResource Foreground}" FontSize="30" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Отсканиркйте QR-код для просмотра информации о товаре" FontSize="14" Foreground="{StaticResource PageForeground}" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <RadioButton Style="{StaticResource ToggleButton}" IsChecked="True" Grid.Column="0" Margin="5,0,5,0" Content="Включить камеру"/>
                        <RadioButton Style="{StaticResource ToggleButton}" Grid.Column="1" Margin="5,0,5,0" Content="Остановить"/>
                        <RadioButton Style="{StaticResource ToggleButton}" Grid.Column="2" Margin="5,0,5,0" Content="Из файла"/>
                    </Grid>

                    <Viewbox MaxHeight="600">

                        <Border CornerRadius="5" Background="{StaticResource Foreground}" Height="500" >
                            <Grid>
                                <Image/>
                                <Border Background="#4C5A83C4" 
                                    Margin="50" Height="auto"
                                    CornerRadius="5"
                                    VerticalAlignment="Bottom">
                                    <StackPanel Margin="30">
                                        <TextBlock Text="Наведите камеру на QR-код" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="В качестве модуля сканера используется веб камера устройства" FontSize="14" Foreground="White" TextWrapping="Wrap"/>

                                    </StackPanel>

                                </Border>
                            </Grid>
                        </Border>
                    </Viewbox>


                </StackPanel>
            </Grid>

            <Border Grid.Column="1" Margin="30,50,0,30" Background="White" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Информация о товаре" Foreground="Black" Margin="30" FontSize="24" FontWeight="Bold"/>

                    <Border Grid.Row="1" Margin="30,0,30,30" 
                            Background="#f8faf9"
                            CornerRadius="5">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="📷" Foreground="Black"  FontSize="104" HorizontalAlignment="Center"/>
                            <TextBlock Text="Отсканиркйте QR-код" FontSize="18" Foreground="Black" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,5,0,0" FontWeight="Medium"/>
                            <TextBlock Text="Информация о товаре появится здесь" FontSize="14" Foreground="Gray" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>



                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
