<Page x:Class="QRcodeStorage.Pages.ShowProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QRcodeStorage.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1350"
      Title="ShowProduct">
    <Page.Resources>
        <local:BooleanConverter x:Key="BooleanConverter" />
    </Page.Resources>

    <Border Padding="30,0,30,0" Background="{StaticResource Background}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Просмотр товаров" Foreground="{StaticResource Foreground}" FontSize="30" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Все товары на складе" FontSize="14" Foreground="{StaticResource PageForeground}"/>
                </StackPanel>

                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Grid.Column="1">

                    <Button 
                        Style="{StaticResource CancelButton}"
                        Content="Экспорт"
                        Height="80"
                        Width="150"/>
                    <Button 
                        Style="{StaticResource UpdateButton}"
                        Content="Обновить"
                        Height="80"
                        Width="150" Margin="15,0,0,0" Click="btnUpdate_Click"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="White" CornerRadius="15">
                <Grid Margin="15,15,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Фильтры поиска:" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,14,15">
                            <TextBlock Text="Название" FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                            <TextBox FontSize="14" Height="40" VerticalContentAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,7,0">
                            <TextBlock Text="Категория" FontSize="14" FontWeight="Medium" Margin="0,0,0,5" />
                            <ComboBox x:Name="cbCategory" FontSize="14" Height="40" SelectedIndex="0" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="7,0,0,0">
                            <TextBlock Text="QR-код" FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                            <ComboBox FontSize="14" Height="40" SelectedIndex="0" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Все"/>
                                <ComboBoxItem Content="С кодом"/>
                                <ComboBoxItem Content="Без кода"/>
                            </ComboBox>
                        </StackPanel>

                        <Button 
                            Content="Поиск" 
                            Style="{StaticResource UpdateButton}" 
                            Grid.Column="3" 
                            Height="40" 
                            Width="200"
                            Margin="14,0,0,15" 
                            VerticalAlignment="Bottom"/>
                    </Grid>


                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,30,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Товары на складе" FontSize="14" FontWeight="Medium" Margin="15,0,0,15"/>
                <TextBlock FontSize="14" Foreground="Gray" FontWeight="Medium" Margin="0,0,15,0" HorizontalAlignment="Right">
                    <Run Text="Найденно: "/>
                    <Run Name="tblRowCount" Text="0"/>
                </TextBlock>

                <DataGrid x:Name="dgProducts" IsReadOnly="True" Grid.Row="1" Margin="0,0,0,30" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding id_product}" Width="40"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding name}" Width="0.3*"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding category}" Width="0.3*"/>
                        <DataGridTextColumn Header="Производитель" Binding="{Binding maker}" Width="0.3*" />
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding count}" Width="0.2*" />
                        <DataGridTextColumn Header="Место хранения" Binding="{Binding place}"  Width="0.4*" />
                        <DataGridCheckBoxColumn Header="QR" Binding="{Binding Qr, Converter={StaticResource BooleanConverter}}" Width="40" />
                        <DataGridTextColumn Header="Описание" Binding="{Binding description}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Page>
