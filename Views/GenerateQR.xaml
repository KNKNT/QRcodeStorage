<Page x:Class="QRcodeStorage.Pages.GenerateQR"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:srv="clr-namespace:QRcodeStorage.Services"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1350"
      Title="GenerateQR">
    <Page.Resources>
        <srv:BooleanConverter x:Key="BooleanConverter" />
    </Page.Resources>

    <Border Padding="30,0,30,0" Background="{StaticResource Background}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Генерация QR-кодов" Foreground="{StaticResource Foreground}" FontSize="30" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Выберете товары для создания QR-кодов" FontSize="14" Foreground="{StaticResource PageForeground}"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Border Background="White" Height="60" CornerRadius="5,5,0,0">
                        <StackPanel Background="Transparent" VerticalAlignment="Center" Orientation="Horizontal" Margin="15,0,0,0" PreviewMouseLeftButtonUp="StackPanel_PreviewMouseLeftButtonUp">
                            <CheckBox x:Name="cbShowQr" Margin="0,6,0,0" Checked="cbShowQr_Checked" Unchecked="cbShowQr_Unchecked"/>
                            <TextBlock Text="Товары без QR-кода" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0" />
                        </StackPanel>
                    </Border>
                    <DataGrid x:Name="dgProducts" Style="{StaticResource MaterialDesignDataGrid}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgProducts_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding name}" Width="0.3*"/>
                            <DataGridCheckBoxColumn Header="QR" Binding="{Binding Qr, Converter={StaticResource BooleanConverter}}" Width="50" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>

            <Border Grid.Column="1" Margin="30,50,0,30" Background="White" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Предпросмотр QR-кода" Foreground="Black" Margin="30" FontSize="24" FontWeight="Bold"/>

                    <Viewbox Grid.Row="1" Margin="0 0 0 30">
                        <Border Background="White">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Opacity="1" Direction="0" Color="#FFB7B7B7"/>
                            </Border.Effect>
                            <Image Stretch="Fill" Width="300" Height="300"/>
                        </Border>
                    </Viewbox>

                    <StackPanel Grid.Row="2" Margin="30,0,30,15">
                        <TextBlock Text="Товар:" FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                        <TextBlock x:Name="tblProduct" Text="Не выбран" FontSize="14" Margin="0,0,0,20"/>
                        <Expander Header="Настройки QR-кода" FontSize="14" IsExpanded="True">
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Размер QR-кода" FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                                <ComboBox FontSize="14" Height="40" SelectedIndex="0" VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="Маленький (150х150)"/>
                                    <ComboBoxItem Content="Средний (300х300)"/>
                                    <ComboBoxItem Content="Большой (500х500)"/>
                                </ComboBox>
                            </StackPanel>
                        </Expander>
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
