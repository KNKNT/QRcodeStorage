<Window x:Class="QRcodeStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRcodeStorage"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid Background="{StaticResource Foreground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Viewbox Margin="40,15,40,15">
                <StackPanel>
                    <TextBlock Text="📦"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               Foreground="White" />

                    <TextBlock Text="Склад QR" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock Text="Управление товарами" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               FontSize="14"
                               FontWeight="Thin"/>
                </StackPanel>
            </Viewbox>

            <StackPanel Margin="0,15,15,15" Grid.Row="1">
                <RadioButton Style="{StaticResource MenuRadioButton}" Tag="{StaticResource icon_CreateProduct}" Content="Создать товар"/>
                <RadioButton Style="{StaticResource MenuRadioButton}" Tag="{StaticResource icon_ShowProduct}" Content="Просмотр товара"/>
                <RadioButton Style="{StaticResource MenuRadioButton}" Tag="{StaticResource icon_GenerateQR}" Content="Генерация QR"/>
                <RadioButton Style="{StaticResource MenuRadioButton}" Tag="{StaticResource icon_ScanQR}" Content="Сканирование QR"/>
            </StackPanel>
            
            
        </Grid>
        
        <GridSplitter Grid.Column="0" 
                      HorizontalAlignment="Right" 
                      Background="Transparent" 
                      Width="10"/>

        <ContentControl Grid.Column="1"/>

    </Grid>
</Window>
